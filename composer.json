{
    "name": "ray/compiler",
    "description": "A dependency injection compiler for Ray.Di",
    "keywords": [
        "Ray.Di",
        "compiler",
        "code-gen"
    ],
    "license": "MIT",
    "require": {
        "php": "~5.6|~7.0",
        "ray/di": "^2.5.0",
        "koriym/printo": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Ray\\Compiler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ray\\Compiler\\": [
                "tests/",
                "tests/Fake"
            ]
        }
    },
    "scripts" : {
        "test": [
            "phpmd src text ./phpmd.xml",
            "phpcs src tests",
            "phpunit"
        ],
        "cs-fix": [
            "php-cs-fixer fix --config-file=./.php_cs",
            "phpcbf src"
        ]
    }
}
